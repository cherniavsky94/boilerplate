{
  "name": "vite-vanilla",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:css": "stylelint \"src/**/*.{css,scss}\"",
    "lint:html": "html-validate \"src/**/*.html\" index.html",
    "lint:html:vnu": "pnpm build && vnu-jar --errors-only --skip-non-html dist",
    "lint-staged": "lint-staged",
    "prepare": "husky install",
    "test:e2e": "playwright test"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.1",
    "@playwright/test": "^1.49.0",
    "autoprefixer": "^10.4.20",
    "cssnano": "^7.0.6",
    "fast-glob": "^3.3.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.4.49",
    "posthtml": "^0.16.7",
    "posthtml-bem": "^0.2.2",
    "posthtml-components": "^1.0.0",
    "posthtml-expressions": "^1.11.4",
    "posthtml-extend": "^0.6.5",
    "posthtml-include": "^2.0.1",
    "prettier": "^3.7.4",
    "sass": "^1.80.6",
    "html-validate": "^9.4.0",
    "vnu-jar": "^23.4.11",
    "vite-plugin-imagemin": "^0.6.1",
    "stylelint": "^16.12.0",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-order": "^6.0.4",
    "stylelint-scss": "^6.4.1",
    "vite": "^7.3.0"
  },
  "lint-staged": {
    "**/*.{js,ts,jsx,tsx,css,scss,html,md,json,yml,yaml}": "prettier --write"
  },
  "browserslist": [
    "defaults",
    "not ie 11",
    "maintained node versions"
  ],
  "packageManager": "pnpm@9.0.0"
}
